	private void addPlayer() {
		listPlayers();
		if (thePlayers.size() < 4) {
			StdOut.println("Name of the player: ");
			String playerName = StdIn.readLine();
			int playerNumber = thePlayers.size();
			StdIn.readLine();

			Player newPlayer = new Player(playerName, playerNumber,
