	import java.util.Random;


	public class Dice 
	{
	    public final static int MAX = 6;
	    private int value;
	    private Random num = new Random();
	    
	    public Dice()
	    {
	    	value = 1;
	    }
	    
	    public int roll()
	    {
	    	value = (num.nextInt(6) + 1);
	    	
	    	return value;
	    }
	}