			String response = StdIn.readString();
			StdIn.readLine();
			
			
			if (response.equals("y")) {
				StdOut.println("Thank you " + currentPlayer.getPlayerName());
				StdOut.println("Here is what you're current grid looks like: ");
				StdOut.println();
				currentPlayer.printGrid();
				printPlayerInfo();
				playerTurn.increment();
				currentPlayer = thePlayers.get(playerTurn.getCount());
			} else if (response.equals("n")) {
				runAsset();
			}
					
		}
		
		runGameProper();
	}
	


